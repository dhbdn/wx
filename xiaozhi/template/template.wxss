/*nav---index*/

.menuWrap{
   padding-top: 20rpx; 
}
.menuWrap:nth-child(2){
  padding-top:0rpx;
}
.menuWrap-item{
  text-align: center;
  -webkit-box-flex: 1;
	-webkit-flex: 1;
	flex:1;
  flex-wrap: wrap;

}

.menuWrap-item-navi{
  display: inline-block;
  width:33.3%;
  padding: 20rpx 0;
  color: #666;
}

.menuWrap-item-navi .icon{
  width:90rpx;
  height:90rpx;
  margin:0 auto;
}

.navList{
  display: block;
