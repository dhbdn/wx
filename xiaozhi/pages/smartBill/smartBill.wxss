/* pages/smartBill/smartBill.wxss */
@import "../card/card.wxss";
page{
  background:#ecede8;
}

.container{
  width:100%;
  height:100%;
}
.container .option{
  width:90%;
  margin:20rpx auto 0;
  background: #fff;
  border-radius:20rpx;
}
.container .option .card{
  width:100%;
  padding: 20rpx 0;
  color:#fff;
  text-align: center;
  
  background:#4fb8ff;
  border-radius:20rpx;
}
.container .detail{
  width:90%;
  margin:40rpx auto 0;
  font-size:26rpx;
  background:#fff;
  border-radius:20rpx;
}
.container .detail .jine{
  height: 80rpx;
  line-height:80rpx;
}

.placer{
  color: #ddd;
  font-size:30rpx;
  line-height:80rpx;
  
}
.picker{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
}

.input-box{
  border-top:2rpx solid #ccc;
  height:90rpx;
  line-height:90rpx;
}
.input-title{
  margin-left:20rpx;
  font-weight: bold;
  width:30%;
}
.cvn{
  
}
#submit{
  width:90%;
  margin: 40rpx auto;
  padding:10rpx 0;
  background: #4fb8ff;
  border-radius:20rpx;
  text-align: center;
  line-height:1.8;
  color:#fff;
  box-shadow: 0rpx  2rpx 0rpx  4rpx #ccc;
}
.send-btn{
  font-size:28rpx;
  color:#FF6633;
}
.valid{
  border-top:2rpx solid #ccc;
}
.placerh{
  text-indent:20rpx;
}
.part{
  line-height: 80rpx;
}
.valid input,.valid .input-title{
  height:80rpx;
  line-height:80rpx;
  /* text-align: center; */
}
.mm{
  /* margin-left:-0; */
}
.mm,.yy{
 
   text-align: center;
}

/*弹窗*/
 .drawer_box{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:1200rpx;
  background:#fff;
  opacity:1;
} 
.mask{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  background: #edece8;
}

.title{
  width:100%;
  height:60rpx;
  margin:20rpx auto;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  
}
.hint{
  width:90%;
  padding:20rpx 20rpx 40rpx 20rpx;
  font-size: 26rpx;
  line-height:30rpx;
  background: #fff;
  margin:30% auto;
}
.bottom{
  margin-top:100rpx;
}

.prompting{
  width:90%;
  margin:0 auto;
  text-indent:40rpx;
  color:#4eb8ff;
}