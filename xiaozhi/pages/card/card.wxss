/* ======添加信用卡======pages/card/card.wxss */

page{
  position: relative;
  height:auto;
  background:#edece8;  
}
.add{
  position: fixed;
  bottom:20rpx;
  width:80%;
  margin-left:10%; 
  margin-top:20rpx;
  padding:20rpx 0;
  font-size:30rpx;
  text-align: center;
  color:#fff;
  border-radius:10rpx;
  background:#4eb8ff;
}

.content{
  width:95%;
  margin:20rpx auto;
  padding:20rpx;
 
  border:2rpx solid #ccc;
  border-radius:10rpx;
  /* background:#4eb8ff;  */
}
.logo{
  width:60rpx;
  height:60rpx;
  margin:0;
}
.left{
  width:70%;
}
.sta,.dele{
  color:#fff;
  font-size:30rpx;
  line-height:100rpx;
}
.sta{
   position: absolute;
   right:20rpx;
   width:100rpx;
   height:60rpx;
   line-height:auto;
   margin:20rpx auto 0;
 }
.bank,.cardType,.cardNo{
  margin-left:20rpx;
  color:#fff;
  line-height:60rpx;
  font-size:30rpx;
}

.col1,.col2.col3{
  width:33.3333%;
  text-align: center;
}

.col3{
  display:inline-block;
  height:50rpx;
  padding:0 10rpx 0 20rpx;
  margin:25rpx 0;
  font-size:36rpx; 
  font-weight:bold; 
  color:#2ab5fc;
}

.date{
  margin-top:20rpx;
}

.jine{
  font-size:36rpx; 
  font-weight:bold; 
  color:#2ab5fc;
}

.jineTxt{
  margin-top:6rpx; 
  text-align:center;
}

.dele{
  position: absolute;
  bottom:0;
  right:40rpx;
}

image{
  width:400rpx;
  height:500rpx;
  margin:100rpx auto;
}