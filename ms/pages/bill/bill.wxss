/* pages/bill/bill.wxss */
page{
  background: #edece8;  
}
.title{
  height:80rpx;
  font-size:30rpx;
  line-height:80rpx;
  border-bottom:2rpx solid #ccc;
}
.title view{
  width:50%;
  text-align: center;
}

.Jine1{
  border-right:2rpx solid #ccc;
}

.selectJine,.selectTime{
  box-shadow: 0 0 0 2rpx #ccc;
  background:#5271ff;
}

.list{
  width:100%;
  padding:20rpx 40rpx;
  border-bottom:2rpx solid #ccc;
}
.jine,.dateTime{
  line-height: 80rpx;
  font-weight:bold;
}
.left{
  width:60%;
}
.bankName,.cardId,.createTime{
  font-size: 30rpx;
  line-height: 50rpx;
}
.right{
  width:30%;
}
.money,.state{
  text-align: right;
}
.money{
  margin-top:30rpx;
  font-size: 34rpx;
  color:red;
  font-weight: bold;
}
.state{
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
}
.null{
  width:400rpx;
  height:400rpx;
  margin:100rpx auto;
}
.nulltxt{
  font-size: 30rpx;
  text-align: center;
}