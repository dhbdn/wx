/* ===========推广中心======pages/Promotion center/Promotion center.wxss */
@import "../../template/template"; 
page{
   /* height:100%; */
  background: linear-gradient(#4eb8ff, #d5eeff)no-repeat;   
}
.container{
  height:100%;
  background: linear-gradient(#4eb8ff, #d5eeff)no-repeat;  
}
.content{
  width:86%; 
  margin:36rpx auto 0;
}

.content .content1{
  text-align:center;
  margin-top:38rpx; 
  padding-bottom:20rpx;
  border-radius:20rpx; 
  border:2rpx solid #ccc; 
  background:#fff;
}

.content .content1 .content-income{
  position: absolute;
  top:6rpx; 
  right:20rpx; 
  color:#000000; 
  font-size:26rpx;
}

.content .content1 .accumulated{
  margin-top:10rpx; 
  color:#0298ff; 
  font-size:36rpx; 
  font-weight:bold; 
  margin-left:-20rpx;
}

.content .content1 .cash{
  width:40%; 
  margin:40rpx auto; 
  padding:10rpx 0;
  color:#0298ff; 
  font-size:30rpx;
  font-weight:blod;
  border:2rpx solid #0298ff; 
  border-radius:10rpx;
}

.content .content1 .top{
  position: absolute;
  top:-20rpx; 
  left:-16rpx; 
  width:150rpx; 
  height:150rpx;
  padding:0;
  border:0;
  background:rgba(0,0,0,0);
}

.content .content1 .promote{
  color:#000; 
  font-size:36rpx; 
  margin-top:30rpx;
}


.situation{
  margin-top:20rpx; 
  margin-left:10rpx; 
  font-size:24rpx; 
  padding-bottom:20rpx;
}

.situation .sIcon{
  display:inline-block; 
  width:20rpx; 
  height:20rpx; 
  margin:10rpx;
}

.arrow{
  width:30rpx;
  height:30rpx;
  margin-top:-30rpx;
}
.bt{
  padding-bottom:20rpx;
  /* border-bottom:2rpx solid #ccc; */
}
