@import"../../template/template";
page{
  height:100%;
  background:#edece8;
}
.head-area{
  background: #fff;
}
.container{
  width:100%;
  height:100%;
}
.item{
  width:100%;
  margin:20rpx auto 0;
  padding:20rpx 0;
  background:#fff;
}
.item view{
  width:33.33%;
}
image{
 width:100rpx;
 height:100rpx;
 margin:20rpx auto;
}
.row{
  flex-wrap:wrap;
}

.txt{
  font-size: 28rpx;
  text-align: center;
}
.column{
  /* margin:20rpx 0; */
  /* border-radius:20rpx; */
  background: #fff;
}
/* //钱包 */
.wallet{
  position: relative;
  width:100%;
  height:400rpx;
  /* padding:40rpx 0 0; */
  background:#5271ef;
}
.wallet-content{
  position: absolute;
  top:0;
  left:0;
  right: 0;
  bottom:0;
  width:70%;
  height:80%;
  margin:auto;
  background:#fff;
  border-radius:10rpx;
}
.title{
  width:30%;
  height:50rpx;
  line-height: 50rpx;
  margin-top:40rpx;
 text-align: center;
  color:#fff;
   background:#5271ef;
   border-top-right-radius: 25rpx;
   border-bottom-right-radius:25rpx;
}
.total-money{
  width:100%;
  margin-top:40rpx;
  text-align: center;
  color:#666;
  font-size: 34rpx;
  font-weight: 500;
}
.trade{
  width:60%;
  height:60rpx;
  margin:40rpx auto 0;
  line-height: 60rpx;
  color:#fff;
  background:#5271ef;
  border-radius:30rpx;
}