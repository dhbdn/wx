<!-- ===========推广中心======pages/Promotion center/Promotion center.wxml-->
<view class='container'>
  <!--content主体部分-->
  <block wx:for="{{arr}}" wx:key="{{item.id}}">
    <view class='row' data-index="{{index}}" catchtap='ontip'>
      <view class='title  {{item.num>0?"color":""}}'>{{item.title}}</view>
      <view class='rate'>{{item.rate}}</view>
      <view class='length {{item.num>0?"color":""}}'>{{item.num}}</view>
      <image class="arrow"src='../../images/account/5.png'></image>
    </view>
  </block>
</view>