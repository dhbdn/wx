.logo>image{
  width:110rpx;
  height:70rpx;
  margin:0;
}
.user{
  width:60%;
}
.img>image{
  width:60rpx;
  height:60rpx;
   margin:0;
}

.buy{
  position: fixed;
  left:20%;
  bottom:20rpx;
  width:60%;
  background:#5271ff;
  color:#fff;
}
.choose{
 width:60%;
  background:#5271ff;
  color:#fff;
}
.showmodal{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.4);
}
.mask{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  width:80%;
  height:50%;
  padding:20rpx;
  background:#edece8;
  border-radius:20rpx;
}
.choose{
  margin-top:40rpx;
}
.bot{
  margin-top:20rpx;
}
input{
  display: inline-block;
  width:80%;
  margin:0 auto;
  line-height: 50rpx;
  font-size: 30rpx;
}

.left{
  width:90%;
}
.cvn{
  text-indent: 0;
