}
.null{
  width:400rpx;
  height:400rpx;
  margin:100rpx auto;
}
.content{
  width:100%;
  padding:20rpx 0rpx;
  border:0;
  border-bottom:2rpx solid #ccc;
  justify-content: space-around;
}
