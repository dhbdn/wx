@import "../../template/template"; 
page{
    /* height:100%;  */
  background: #edece8;   
}
.container{
  height:100%;
  background: #edece8;  
}
.title{
  width:100%;
  padding:20rpx 0;
  font-size: 34rpx;
  text-align: center;
  color:#fff;
  background:#5271ff;
}
.content{
  position: absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  margin:auto;
  width:100%;
  height:60%;
}
.dec{
  font-size: 30rpx;
  text-align: center;
  color:#5271ff;
  margin-bottom:60rpx;
}

.img{
  position: relative;
  width:500rpx;
  height:500rpx;
  margin:0 auto;
}
.code{
  position: absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  margin:auto;
  width:400rpx;
  height:400rpx;
}
.box1{
  position: absolute;
  top:0;
  left:0;
  width:60rpx;
  height:60rpx;
  border-top: 2rpx solid #5271ff;
  border-left: 2rpx solid #5271ff;
}
.box2{
  position: absolute;
  top:0;
  right:0;
  width:60rpx;
  height:60rpx;
  border-top: 2rpx solid #5271ff;
  border-right: 2rpx solid #5271ff;
}
.box3{
  position: absolute;
  bottom:0;
  left:0;
  width:60rpx;
  height:60rpx;
  border-bottom: 2rpx solid #5271ff;
  border-left: 2rpx solid #5271ff;
}
.box4{
  position: absolute;
  bottom:0;
  right:0;
  width:60rpx;
  height:60rpx;
  border-bottom: 2rpx solid #5271ff;
  border-right: 2rpx solid #5271ff;
}