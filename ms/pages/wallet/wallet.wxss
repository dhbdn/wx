/* pages/wallet/wallet.wxss */
page {
  height: 100%;
}

.container {
  height: 100%;
  background: #edece8;
}

.head {
  background: #fff;
}

.withdrawal {
  width: 100%;
  text-align: left;
  color: #000;
  background: #fff;
}

.jine {
  padding-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}

.card {
  width: 50rpx;
  height: 40rpx;
}

/* .top{
  justify-content: space-around;
} */

.status {
  width: 100%;
  justify-content: space-around;
}

.left, .right {
  position: relative;
  width: 40%;
  text-align: center;
  color: #fff;
  margin: 5% 0 40rpx;
  padding: 30rpx 0;
  background: #5271ef;
  border-radius: 10rpx;
}

.up, .down {
  width: 60rpx;
  height: 100rpx;
}

.down {
  position: absolute;
  bottom: 0;
  right: 10rpx;
}

.up {
  position: absolute;
  top: 0;
  right: 10rpx;
}

.left {
  position: relative;
  box-sizing: content-box;
}

.money, .txt {
  color: #fff;
  font-size: 26rpx;
}

.txt {
  margin-top: 10rpx;
}

.col {
  position: relative;
  width: 100%;
  margin: 0 auto;
  padding: 20rpx 40rpx;
  background: #fff;
  line-height: 60rpx;
  font-size: 30rpx;
}

.col1 {
  margin-top: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.transact {
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}

.arrow {
  position: absolute;
  top: 50%;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}

.withdrawalDetial {
  width: 100%;
  padding: 20rpx 40rpx;
  background: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

.inputWrapper {
  margin-top: 20rpx;
}

.input {
  display: block;
  width: 500rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  background: #fff;
}

.useable {
  border-top: 2rpx solid #ccc;
  padding-top: 10rpx;
}

.bot {
  width: 60%;
  margin: 40rpx auto 0;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #5271ff;
  border-radius: 10rpx;
}

.wallets-password {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

/*mask*/

.mask_wrapper {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 80%;
  height: 40%;
  margin: auto;
  border-radius: 20rpx;
  background: #edece8;
}

.drawer_content {
  width: 80%;
  margin: 0 auto;
}

.btn_ok {
  width: 40%;
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

.top {
  padding-top: 8px;
}

.bottom {
  padding-bottom: 8px;
}

.title {
  height: 30px;
  width: 100%;
  margin-top: 20rpx;
  color: #000;
  /* text-align: center; */
  line-height: 30px;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.bottom {
  width: 100%;
  margin-top: 40rpx;
}

.password_dot {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #000;
  box-sizing: border-box;
  width: 80rpx;
  height: 90rpx;
  border: 2rpx solid #ddd;
  border-left: none 0;
}

.password_dot:nth-child(1) {
  border-left: 2rpx solid #ddd;
}

i {
  background: #000;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
}

.input-content {
  position: absolute;
  opacity: 0;
  left: -100%;
  top: 600rpx;
  background: #f56;
  z-index: -999;
}

.Tips {
  width: 80%;
  margin: 20rpx auto;
}

/* //弹窗 */

.box-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  width: 100%;
  height: 100%;
  background: #fff;
}

.box-content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 80%;
  height: 40%;
  background: #edece8;
  border-radius: 20rpx;
}

.tips {
  width: 100%;
  margin: 20rpx auto 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}

.tips1 {
  width: 100%;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
}

.tipsb {
  padding-left: 20rpx;
}

.remind {
  color: #5271ff;
  font-weight: blod;
}

button {
  margin-top: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.close {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 60rpx;
  height: 60rpx;
  transform: rotateZ(45deg);
}
