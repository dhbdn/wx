/* pages/about/about.wxss */
page{
  height:100%;
  background: #edece8;  
}
.container{
  height:100%;
}
.top{
  /* background:#fff; */
  padding:40rpx 0;
}
.logo{
  width:200rpx;
  height:200rpx;
  margin:0 auto;
}
.body{
  margin-top:40rpx;
  background: #fff;
}
.col{
  position: relative;
  width:100%;
  padding:30rpx 40rpx;
  color:#fff;
  font-size:30rpx;
  border-bottom:2rpx solid #ccc;
}
.col view{
  width:50%;
}
.col image{
  position: absolute;
  top:50%;
  right:40rpx;
  width:60rpx;
  height:60rpx;
  margin-top:-20rpx;
}
.right{
  text-align: right;
}

.mask{
  position: absolute;
  top:0;
  left:0;
  z-index:5;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.5)
}
.qrcode{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index:100;
  width:400rpx;
  height:400rpx;
  margin-top:-200rpx;
  margin-left:-200rpx;
}