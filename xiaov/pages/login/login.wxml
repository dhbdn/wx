<!--pages/login/login.wxml-->
<view class="container">
  <view class="fill-area" >
     <view class="ui-cell input-box">
       <view class="input-title">用户名</view>
      <view class="ui-primary">
        <input type="number" focus="true" bindinput="getName" value="{{phone}}" maxlength="11" placeholder="请输入手机号码"/>
      </view> 
    </view>

    <view class="ui-cell input-box">
       <view class="input-title">密码</view>
      <view class="ui-primary">
        <input type="text" password="true" focus="{{focus}}" bindinput="getPassword" maxlength='20' value="{{password}}" placeholder="请输入密码"/>
      </view> 
    </view>
   
      <view class="login-btn ui-cell" catchtap="loginPwd">登录</view>
    <view class='bot row'>
        <view class="forget-btn ui-cell pull-left" catchtap="register">注册</view>
        <view class="forget-btn ui-cell pull-right" catchtap="findPwd">忘记密码?</view>
    </view>
  </view>
</view>
