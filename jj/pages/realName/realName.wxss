page{
  height:100%;
  background: #eee;
}
.input-wrapper{
  width:100%;
  margin:20rpx 0;
  background: #fff;
}
.input-wrapper .col{
  font-size:26rpx;
  height:80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #ccc;
}
.txt{
  display: block;
  width:150rpx;
  padding-left:20rpx;
}
.input{
  width:560rpx;
  margin:14rpx 0 0 0;
}
.plac{
  font-size:22rpx;
}
.card .txt{
  letter-spacing: 4rpx;
}
.tele .txt,.date .txt {
  letter-spacing: 0;
}

.form .submit{
  width:80%;
  padding:10rpx 0;
  margin: 0 auto;
  border-radius: 20rpx;
  font-size:30rpx;
  color:#fff;
  background: #4eb8ff;
  line-height:2.0;
}

.tips{
  width:90%;
  margin:160rpx auto 0 ;
  font-size: 28rpx;
  
  color:#000;
}
.tips text{
  color:#4eb8ff;
  font-weight: bold;
}