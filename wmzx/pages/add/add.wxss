/* ======选择信用卡====pages/add/add.wxss */
page{
  height:100%;
  background: #edece8;
}
.container{
  height:100%;
}

.input-wrapper{
  width:100%;
  margin:20rpx 0;
  background: #fff;
}

.input-wrapper .col{
  font-size:26rpx;
  height:80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #ccc;
  background:#edece8;
}
.input-title{
  padding-left:0;
}
.txt,.txt2{
  display: block;
  width:150rpx;
  padding-left:20rpx;
  text-align: center;
}
.txt2{
   width:150rpx;
  /* width:240rpx; */
}
.txt1{
  height:60rpx;
  line-height:60rpx;
}
.txt1{
  margin-top:15rpx;
}
.cvn{
  margin:0;
}
.code{
  margin-top:14rpx;
}

.input{
  width:560rpx;
  margin:14rpx 0 0 0;
}

.plac{
  font-size:24rpx;
}

.card .txt{
  letter-spacing: 20rpx;
}

.submit{
  width:80%;
  padding:10rpx 0;
  margin: 0 auto 40rpx;
  border-radius: 20rpx;
  font-size:30rpx;
  color:#fff;
  background:#cfad55;
  line-height:2.0;
}

.drawer_box{
  position: absolute;
  top:0;
  left:0;
  z-index:5;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.2);
}
.mask{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;  
  width:80%;
  height:50%;
  padding:20rpx;
  background:#fff;
  border-radius:20rpx;
}

.wallets-password .col{
  height:120rpx;
  line-height:120rpx;
  border-bottom:2rpx solid #edece8;
}
.txt2,.cvn{
  height:120rpx;
  line-height:120rpx;

}
.bottom{
  margin-top:60rpx;
}
button{
  font-size:30rpx;
}
button:hover{
  background:#4eb8ff;
  color:#fff;
}

.obvious{
  color:#4eb8ff;
  font-size: 28rpx;
  font-weight: bold;
}

/*验证码弹窗*/
.msg,.popup{
  position: absolute;
  top:0;
  left:0;
  z-index:5;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.4)
}
.msg-mask{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  width:80%;
  height:30%;
  /* padding:20rpx; */
  border-radius:20rpx;
  background:#edece8;
}

.btn{
  width:30%;
  margin-top:40rpx;
}

/*选择支付方式*/
.chooseItem{
  width:50%;
  margin-top:40rpx;
}
.choosed{
  width:auto;
  margin:auto;
  padding:20rpx;
}
.choosed image{
  width:60rpx;
  height:60rpx;
  margin:0rpx auto;
}
.chooseItem text{
  text-align: center;
}


/*选择支付方式*/
.kj,.wallet{
  background:#c39d49;
  border-radius:20rpx;
  color:#fff;
  font-weight: bold;
}
/*请求状态的弹窗*/

.tips_wrapper{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:80%;
  height:20%;
  margin:auto;
  background:#edece8;
}
.tips_title{
  margin:20rpx auto;
  font-size: 30rpx;
  color:#000;
  font-weight: bold;
  text-align: center;
}


.sendCode{
  width:375rpx;
  height:80rpx;
  margin:20rpx 0 0 0rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color:#4eb8ff;
}

.code{
  width:240rpx;
}

.CODE{
    display: inline-block;
    width:30%;
    line-height: 50rpx;
    padding:20rpx 0;

}
.kCode{
   height:50rpx;
   padding:20rpx 0;
   line-height: 50rpx;
}

.title{
  width:100%;
  text-align: center;
  margin:20rpx 0 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}