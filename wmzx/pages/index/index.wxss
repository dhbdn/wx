 @import "../../template/template"; 

.container{
   height: 100%;
   background: #edece8;
}
/*顶部功能区*/
.topFunc{
  margin:20rpx auto;
}
.func-item{
  width:50%;
  text-align: center;
}
.func-item image{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
}
.func-item view{
   line-height: 100rpx; 
   font-size: 28rpx;
}

.func{
  position: absolute;
  top:20rpx;
  right:40rpx;
}
.lr{
  margin-top:40rpx;
  margin-left:20rpx;
}
.lr view{
  margin-right:100rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:#fff;
}

