/* ===========推广中心======pages/Promotion center/Promotion center.wxss */

.share{
  padding:20rpx 0;
  margin:0;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  color:#fff;
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
  background:#cfad55;
  border-radius:0;
}
.qrcode{
  width:300rpx;
  height:300rpx;
  margin:40rpx auto;
}
.scane{
  display: inline-block;
  width:100%;
  text-align: center;
}
.myPromotion{
  position: fixed;
  bottom:40rpx;
  width:80%;
  height:80rpx;
 left:10%;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  border-radius:10rpx;
  background: #cfad55;
}

/* //会员发展列表 */
.head{
 
  width:100%;
  padding:40rpx 0 20rpx;
  text-align: center;
  background: #cfad55;
  color:#fff;
}
.num{
  width:50%;
  margin-top:20rpx;
  text-align: center;
  color:#fff;
}

.list>view{
  width:25%;
  padding:15rpx 0;
  border-top:2rpx solid #ccc;
  border-right:2rpx solid #ccc;
   border-bottom:2rpx solid #ccc;
  text-align: center;
}
.list>view:nth-child(4){
  border-right:0;
}
.active{
  color:#fff;
  background: #cfad55;
}

.memberList{
  width:100%;
  padding: 20rpx;
  border-bottom:2rpx solid #ccc;
}
.name,.mer,.state{
  width:20%;
  text-align: center;
}
.tele{
  width:40%;
  text-align: center;
}

.null{
  position: absolute;
  top:50%;
  left:50%;
  width:400rpx;
  height:500rpx;
  margin-top:-250rpx;
  margin-left:-200rpx;
}