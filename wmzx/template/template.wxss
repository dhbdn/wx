/*nav---index*/

.menuWrap{
  padding: 20rpx;
  width:100%;
}
.menuWrap:nth-child(2){
  padding-top:0rpx;
}
.menuWrap-item{
  text-align: center;
  -webkit-box-flex: 1;
	-webkit-flex: 1;
	flex:1;
  flex-wrap: wrap;
 
}

.menuWrap-item-navi{
  display: inline-block;
  width:33.333%;
  padding: 10rpx 0;
   margin-top:20rpx;
  color: #666;
}

.menuWrap-item-navi .icon{
  width:90rpx;
  height:90rpx;
  margin:0 auto;
}

.navList{
  display: block;
  margin-top:10rpx;
}

